@model IEnumerable<TrainingManagementSystem_ITI.ViewModel.GradeViewModel>

<div>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Grade Management</h2>
        <a asp-action="Create" class="btn btn-primary d-inline-flex align-items-center gap-2">
            <i class="bi bi-plus-lg"></i> Add Grade
        </a>
    </div>
    <p class="text-muted">Manage your grade management efficiently</p>

    <table class="grade-table table table-striped table-hover">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Course</th>
                <th>Grade</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model)
            {
                <tr>
                    <td>@grade.TraineeName</td>
                    <td>@grade.CourseName</td>
                    <td>@grade.Value</td>
                    <td class="text-center">
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary" type="button" id="dropdownMenuButton-@grade.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton-@grade.Id">
                                <li>
                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@grade.Id">
                                        <i class="bi bi-pencil-square me-2"></i> Edit
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@grade.Id">
                                        <i class="bi bi-trash me-2"></i> Delete
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
