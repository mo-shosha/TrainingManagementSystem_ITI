@model TrainingManagementSystem_ITI.Models.Grade

<div class="container mt-4">
    <h2>Delete Grade</h2>
    <hr />

    <div class="alert alert-warning">
        <h5>Are you sure you want to delete this grade?</h5>
        <p>
            <strong>Student:</strong> @Model.Trainee?.Name <br />
            <strong>Course:</strong> @Model.Session?.Course?.Name <br />
            <strong>Grade:</strong> @Model.Value
        </p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
    </form>
</div>
