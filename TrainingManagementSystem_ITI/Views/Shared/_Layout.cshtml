@{
    Layout = null;
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrainingManagementSystem_ITI</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #f8f9fc;
        }

        .sidebar {
            width: 240px;
            height: 100vh;
            position: fixed;
            background: #ffffff;
            border-right: 1px solid #e5e5e5;
            padding-top: 20px;
        }

            .sidebar .nav-link {
                color: #555;
                font-weight: 500;
                padding: 10px 20px;
                border-radius: 8px;
                margin: 4px 10px;
                transition: all 0.2s ease-in-out;
            }

                .sidebar .nav-link:hover {
                    background: #f7f4ff;
                    color: #6f42c1;
                }

                .sidebar .nav-link.active {
                    background: #f0ebff;
                    color: #6f42c1;
                    font-weight: 600;
                }

        .main-content {
            margin-left: 240px;
            padding: 20px;
        }

        .topbar {
            background: #fff;
            padding: 10px 20px;
            border-bottom: 1px solid #e5e5e5;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .user-info {
            display: flex;
            align-items: center;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="px-3 mb-4 text-primary">ITI Tanta</h4>
        <nav class="nav flex-column">
            <a class="nav-link @(currentController == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                <i class="bi bi-speedometer2 me-2"></i> Dashboard
            </a>
            <a class="nav-link @(currentController == "Courses" ? "active" : "")" asp-controller="Courses" asp-action="Index">
                <i class="bi bi-journal-text me-2"></i> Courses
            </a>
            <a class="nav-link @(currentController == "Sessions" ? "active" : "")" asp-controller="Sessions" asp-action="Index">
                <i class="bi bi-calendar-event me-2"></i> Sessions
            </a>
            <a class="nav-link @(currentController == "Users" ? "active" : "")" asp-controller="Users" asp-action="Index">
                <i class="bi bi-people me-2"></i> Users
            </a>
            <a class="nav-link @(currentController == "Grades" ? "active" : "")" asp-controller="Grades" asp-action="Index">
                <i class="bi bi-award me-2"></i> Grades
            </a>
            <a class="nav-link @(currentController == "Developer" ? "active" : "")" asp-controller="Developer" asp-action="Index">
                <i class="bi bi-code-slash me-2"></i> Developer
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Bar -->
        <div class="topbar">
            <div>
                <h6 class="m-0">Hello, ITI</h6>
                <small>Have a great lesson today.</small>
            </div>
            <div class="user-info">
                <span>ITI Tanta</span>
            </div>
        </div>

        <!-- Body Content -->
        <main role="main" class="pt-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
